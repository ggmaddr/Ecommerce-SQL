<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Om Nom</title>

    <link rel="stylesheet" href="css/style.css">

    <link rel="icon" type="image/x-icon" href="./images/om nom logo.png">

    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />

    <!-- font awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/lightgallery-js/1.4.0/css/lightgallery.min.css">

</head>
<body>
    
    <!-- header -->

    <header class="header">

        <div>
            <img class ="logo" src="images/om nom logo.png" alt=""> 
            <a href="#" class="logo"> Om CÃ¡fe </a>
        </div>

        <nav class="navbar">
            <a href="/home">Back To Home</a>
            <a href=""> <i class="fas fa-phone-alt"></i> +1 (669)400-1216</a>
        </nav>

    </header>


    <!-- products, categories variables passing -->

    <section  class="product" id="product">

        <h1 style="margin: 100px; " class="heading">our <span> products</span></h1>
        
        <% categories.forEach(category => { %>

            <h1 class="heading"><%= category.product_category %></h1>
            <div class="box-container" id = "first">
              <% products.forEach(product => { %>
                <% if (product.product_category === category.category_id) { %>
                    <div class="box" >
                        <div class="image">
                            <img src="images/product<%=product.product_id %>.png" alt="">
                        </div>
                        <div class="content">
                            <h3> <%=  product.name  %></h3>
                            <h3 style="margin: 5%; color:rgb(255, 137, 107) " >Rating:  <%=  product.average_rating%>/5</h3>
                            <span class="price"> $<%=  product.price%></span>
                        </div>
                    </div>
                <% } %>

              <% }) %>
            </div>
           
          <% }) %>


    </section>


    <!-- product end-->


    <!-- footer -->

    <section class="footer">

        <div class="box-container">

            <div class="box">
                <h3>address</h3>
                <p>1234 Street, San Jose 95121, CA, USA</p>
                <div class="share">
                    <a href="#" class="fab fa-facebook-f"></a>
                    <a href="#" class="fab fa-twitter"></a>
                    <a href="#" class="fab fa-instagram"></a>
                    <a href="#" class="fab fa-linkedin"></a>
                </div>
            </div>

            <div class="box">
                <h3>E-mail</h3>
                <a href="#" class="link" style="text-transform: none;">gnt0120@gmail.com</a>
            </div>

            <div class="box">
                <h3>call us</h3>
                <p>+12341434543</p>
                <p>+1 (123) 456-890</p>
            </div>

            <div class="box">
                <h3> opening hours</h3>
                <p>Monday - Friday: 9:00 - 23:00 <br> Saturday: 8:00 - 24:00 </p>
            </div>

        </div>

        <div class="credit">created by <span>ggmaddr</span> all rights reserved! </div>
        
    </section>
    <!-- footer ends -->

    <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/lightgallery-js/1.4.0/js/lightgallery.min.js"></script>

    <script src="js/script.js"></script>

    <script>
        lightGallery(document.querySelector('.gallery .gallery-container'));
    </script>
</body>
</html>